<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Welcome"
    android:background="@drawable/sl5">
    <TextView
        android:id="@+id/podatok"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_border"
        android:padding="15dp"
        android:textSize="18dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:id="@+id/poraki"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/podatok"
        android:text="Пораки"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:backgroundTint="#808080"
        android:textSize="15dp"/>
    <Button
        android:id="@+id/usluga"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/poraki"
        android:text="Услуги"
        android:backgroundTint="#808080"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="15dp"/>
    <Spinner
        android:visibility="invisible"
        android:id="@+id/spinner_welcome"
        android:layout_width="match_parent"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/usluga"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="#808080"
        android:entries="@array/Studio"
        android:spinnerMode="dialog"
        />

    <Button
        android:id="@+id/prebaraj"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:textSize="13dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/black"
        android:text="Пребарај"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner_welcome" />

    <Button
        android:id="@+id/odjavi_k"
        android:layout_width="170dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/white"
        android:text="Одјави се"
        android:textSize="13dp"
        android:textColor="@color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>