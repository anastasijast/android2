<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Zakazi_termin"
    android:background="@drawable/sl5">
    <TextView
        android:id="@+id/salon_nas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:textSize="40dp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:text="jeeeeej"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/vreme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/datum"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_border"
        android:layout_marginHorizontal="10dp"
        android:hint="Време"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/datum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/salon_nas"
        android:layout_marginTop="30dp"
        android:background="@drawable/edit_border"
        android:layout_marginHorizontal="10dp"
        android:hint="Датум"
        android:padding="10dp"/>
    <Button
        android:id="@+id/zakaza"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/vreme"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:backgroundTint="#808080"
        android:text="Закажи"
        android:textSize="13dp"
        android:paddingHorizontal="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>